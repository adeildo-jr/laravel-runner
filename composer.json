{
    "name": "adeildo-jr/laravel-runner",
    "description": "Run system tasks via jobs with a migration-like structure",
    "keywords": [
        "laravel",
        "system-tasks",
        "jobs",
        "tasks",
        "runner"
    ],
    "homepage": "https://github.com/adeildo-jr/laravel-runner",
    "license": "MIT",
    "authors": [
        {
            "name": "Adeildo Jr",
            "email": "adeildojr101@hotmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "spatie/laravel-package-tools": "^1.16",
        "illuminate/contracts": "^11.0||^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.8",
        "larastan/larastan": "^3.0",
        "orchestra/testbench": "^10.0.0||^9.0.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "AdeildoJr\\Runner\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AdeildoJr\\Runner\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "AdeildoJr\\Runner\\RunnerServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
